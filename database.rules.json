{
	"rules": {
		".read": false,
		".write": false,
		"users": {
			".indexOn": ["creationTimestamp",
				"username"],
			".read": true,
			".write": "auth != null && auth.provider !== 'Anonymous'",
			"$uid": {
				"chats": {
					".indexOn": "timestamp",
					".read": "auth != null && auth.token.email_verified === true && auth.provider !== 'Anonymous'",
					".write": "auth != null && auth.token.email_verified === true && auth.provider !== 'Anonymous'",
					"$uid": {
						".read": "auth != null && $uid === auth.uid",
						".write": "auth != null && $uid === auth.uid",
						".validate": "newData.hasChildren(['text', 'timestamp']) && newData.child('text').isString() && newData.child('timestamp').isNumber()"
					}
				},
				"followers": {
					".read": true,
					".write": "auth != null"
				},
				"followings": {
					".read": true,
					".write": "auth != null"
				},
				"tokens": {
					".read": "auth != null",
					".write": "auth != null"
				},
				"privacy": {
					".read": "auth != null && $uid === auth.uid",
					".write": "auth != null && $uid === auth.uid"
				},
				"settings": {
					".read": "auth != null && $uid === auth.uid",
					".write": "auth != null && $uid === auth.uid"
				}
			}
		},
		"posts": {
			".indexOn": ["postTimestamp",
				"uid"],
			".read": "auth != null && auth.token.email_verified === true && auth.provider !== 'Anonymous'",
			".write": "auth != null && auth.token.email_verified === true && auth.provider !== 'Anonymous'",
			"$postKey": {
				".read": "auth != null && auth.token.email_verified === true && auth.provider !== 'Anonymous'",
				".write": "auth != null && auth.token.email_verified === true && auth.provider !== 'Anonymous'"
			}
		},
		"rooms": {
			"$roomId": {
				".read": "auth != null && auth.provider !== 'Anonymous'",
				".write": "auth != null && auth.token.email_verified === true && auth.provider !== 'Anonymous'"
			},
			".read": "auth != null",
			".write": "auth != null && auth.provider !== 'Anonymous'"
		},
		"beta": {
			".indexOn": "email",
			".read": true,
			".write": true
		}
	}
}